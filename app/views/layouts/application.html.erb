<!DOCTYPE html>
<html>
<head>
  <title>GSite</title>
  <%= stylesheet_link_tag    "application" %>
  <%= javascript_include_tag "application" %>
  <%= csrf_meta_tags %>
</head>
<body>
    <div>
        <div id="main_container">

	        <div id="header">

               <div class="top_right">
       
                    <div class="languages">
                        <div class="lang_text">Currency:</div>
                        <a href="#" class="lang"><%= image_tag("CurrencyFlags/euro.gif", :alt => "Euro Flag") %></a>
                        <a href="#" class="lang"><%= image_tag("CurrencyFlags/en.gif", :alt => "English Flag") %></a>       
                    </div>
            
                    <div class="big_banner">
                    	<%= image_tag("banner728.jpg", :alt => "Banner") %>
                    </div>
        
                </div>
    
  
                <div id="logo">
                    <%= image_tag("GolfLogo.gif", :alt => "McCarthy Golf Logo") %>
	            </div>
        

        

            </div>
    
           <div id="main_content"> 
   
                    <div id="menu_tab">
                            <ul class="menu">
                                 <li><a href="/" class="nav">  Home </a></li>
                                 <li class="divider"></li>
                                 <li><a href="/Products/List" class="nav">Catalog</a></li>
                                 <li class="divider"></li>
                                 <li><a href="#" class="nav">Special Offers</a></li>
                                 <li class="divider"></li>
                                 <li><a href="#" class="nav">My Account</a></li>
                                 <li class="divider"></li>
                                 <li><a href="#" class="nav">Sign Up</a></li>
                                 <li class="divider"></li>                         
                                 <li><a href="#" class="nav">Store Locations</a></li>
                                 <li class="divider"></li>
                                 <li><a href="contact.html" class="nav">Contact Us</a></li>

                            </ul>

                    </div><!-- end of menu tab -->
            
            <div class="crumb_navigation">
            Navigation: <span class="current">Home</span>
    
            </div>        
    
           <div class="left_content">
            <div class="title_box">Categories</div>
            <div class="border_box">
                 <div class="product_title">Titleist MB 710 Irons</div>
                 <div class="product_img"><%= image_tag("Titleist MB 710 Irons.jpg", :alt => "Bushnell Range Finder", :style => "width:140px;" ) %></div>
                 <div class="prod_price"><span class="reduce"></span> <span class="price">899</span></div>
             </div>  

        
        
             <div class="title_box">Special Products</div>  
             <div class="border_box">
                 <div class="product_title">Bushnell Yardage Pro 1600 Rangefinder</div>
                 <div class="product_img"><%= image_tag("Bushnell Yardage Pro 1600 Rangefinder.jpg", :alt => "Bushnell Range Finder", :style => "width:100px;height:80px" ) %></div>
                 <div class="prod_price"><span class="reduce"></span> <span class="price">399</span></div>
             </div>   
     
     
             <div class="title_box">Newsletter</div>  
             <div class="border_box">
		        <input type="text" name="newsletter" class="newsletter_input" value="your email"/>
                <a href="#" class="join">subscribe</a>
             </div>  
     
             <div class="banner_adds">
     
             &nbsp;</div>    
        
    
           </div><!-- end of left content --> 



           <div class="center_content">
     	      <%= yield %>
           </div><!-- end of center content -->



         <div class="right_content">
 
              <div class="title_box">Search</div>  
             <div class="border_box">
		        <input type="text" name="newsletter" class="newsletter_input" value="keyword"/>
                <a href="#" class="join">search</a>
             </div>  
     

     
 
   		        <div class="shopping_cart">
        	        
                    
                </div>
   
   
             <div class="title_box">Whats new</div>  
             <div class="border_box">
                 <div class="product_title">Galvin Green Ardell Jacket</div>
                 <div class="product_img"><%= image_tag("Galvin Green Ardell Jacket.jpg", :alt => "Green Jacket", :style => "width:100px;height:80px" ) %></div>
                 <div class="prod_price"><span class="reduce"></span> <span class="price">80</span></div>
             </div>   
     
     
     
            <div class="title_box">Brands</div>
                 
     
             <div class="banner_adds">
     
             &nbsp;</div>        
     
           </div><!-- end of right content -->   


            
           </div><!-- end of main content -->
   
   
   
           <div class="footer">
   

                <div class="left_footer">
                &nbsp;</div>
        
                <div class="center_footer">
                Test Application. All Rights Reserved 2012<br />
                <%= image_tag("payment.gif", :alt => "Green Jacket") %>
                </div>
        
                <div class="right_footer">
                <a href="index.html">home</a>
                <a href="details.html">about</a>
                <a href="details.html">sitemap</a>
                <a href="details.html">rss</a>
                <a href="contact.html">contact us</a>
                </div>   
   
           </div>                 


        </div>
        <!-- end of main_container -->
        
    </div>
</body>
</html>
